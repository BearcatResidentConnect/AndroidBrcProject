<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentalRegister">

    <EditText
        android:id="@+id/idPptName"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:hint="Property name"
        app:layout_constraintBottom_toTopOf="@+id/idPptEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/idPptEmail"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:hint="Enter mail id"
        app:layout_constraintBottom_toTopOf="@+id/idPptAdr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPptName" />

    <EditText
        android:id="@+id/idPptAdr"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:hint="Address"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/idPptCou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPptEmail" />

    <EditText
        android:id="@+id/idPptCou"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:hint="Country"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/idPptZip"
        app:layout_constraintEnd_toStartOf="@+id/idPptStat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPptAdr" />

    <EditText
        android:id="@+id/idPptStat"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:hint="State"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/idPptZip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/idPptCou"
        app:layout_constraintTop_toBottomOf="@+id/idPptAdr" />

    <EditText
        android:id="@+id/idPptZip"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:hint="Zip code"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/SignUpBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPptStat" />

    <Button
        android:id="@+id/SignUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPptZip" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toTopOf="@+id/idPptName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rentalhome" />


</androidx.constraintlayout.widget.ConstraintLayout>