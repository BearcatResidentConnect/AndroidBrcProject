<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentalRegister">

    <EditText
        android:id="@+id/nrNameET"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:hint="Property name"
        app:layout_constraintBottom_toTopOf="@+id/raEmailET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/raEmailET"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:hint="Enter mail id"
        app:layout_constraintBottom_toTopOf="@+id/raAddress2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nrNameET" />

    <EditText
        android:id="@+id/raAddress2"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:hint="Address"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/raCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raEmailET" />

    <EditText
        android:id="@+id/raCountry"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:hint="Country"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/raZIP"
        app:layout_constraintEnd_toStartOf="@+id/raState"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raAddress2" />

    <EditText
        android:id="@+id/raState"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:hint="State"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/raZIP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/raCountry"
        app:layout_constraintTop_toBottomOf="@+id/raAddress2" />

    <EditText
        android:id="@+id/raZIP"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:hint="Zip code"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/rSignUpBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raState" />

    <Button
        android:id="@+id/rSignUpBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raZIP" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toTopOf="@+id/nrNameET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rentalhome" />


</androidx.constraintlayout.widget.ConstraintLayout>